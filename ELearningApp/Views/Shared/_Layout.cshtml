                    <form asp-controller="Courses" asp-action="Index" method="get">
                        <div class="input-group">
                            <input type="text" name="search" value="@ViewData["Search"]" class="form-control border-light" style="padding: 30px 25px;" placeholder="Keyword">
                            <div class="input-group-append">
                                <button type="submit" class="btn btn-secondary px-4 px-lg-5">Search</button>
                            </div>
                        </div>
                    </form>
                    <!-- SEARCH FORM END -->
                    <!-- SERACH END-->
