                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </div>
    <!-- Navbar End -->
    

    <div>
        <main role="main" class="pb-3">
            @{
                var error = @ViewContext.HttpContext.Request.Query["error"].ToString();
                var success = ViewContext.HttpContext.Request.Query["success"].ToString();
                if (!string.IsNullOrWhiteSpace(error))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>فشل!</strong> <span id="errorMsg">@error</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
                if (!string.IsNullOrWhiteSpace(success))
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>نجح!</strong> <span id="errorMsg">@success</span>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }
            }
            @RenderBody()
        </main>
    </div>


