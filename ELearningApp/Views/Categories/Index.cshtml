@{
    ViewData["Title"] = "Categories";
    ViewData["ControllerName"] = "Categories";
}
@using ELearningApp.Core.Assists
@using ELearningApp.Core.Models
@model PaginatedList<Category>

<div class="d-block" style="overflow-x: auto; width: 100%;">
    <table id="products" class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th style="width: 50px;"></th>
                <th style="width: 50px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Items)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td><a class="btn btn-primary py-1 px-2" href="/@(ViewData["ControllerName"])/Edit/@product.Id"><i class="fa fa-pencil"></i></a></td>
                    <td><a class="btn btn-danger py-1 px-2" href="/@(ViewData["ControllerName"])/Delete/@product.Id"><i class="fa fa-trash"></i></a></td>
                </tr>
            }
        </tbody>
    </table>

    <div>
        <!-- أزرار التنقل بين الصفحات -->
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <!-- زر الذهاب لأول صفحة -->
                @if (Model.PageNumber > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="@Model.PageSize">الأولى</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">الأولى</span>
                    </li>
                }
                <!-- زر السابق -->
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">السابق</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">السابق</span>
                    </li>
                }

                <!-- عرض أرقام الصفحات -->
                @{
                    int startPage = Math.Max(1, Model.PageNumber - 2); // بدء نطاق الأرقام
                    int endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2); // نهاية نطاق الأرقام
                }

                @for (int i = startPage; i <= endPage; i++)
                {
                    <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                    </li>
                }

                <!-- زر التالي -->
                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">التالي</a>
                    </li>
                }
                else
                {
                    <li class="page-item disabled">
                        <span class="page-link">التالي</span>
                    </li>
                }

                <!-- زر الذهاب لآخر صفحة -->
                @if (Model.PageNumber < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-pageNumber="@Model.TotalPages" asp-route-pageSize="@Model.PageSize">الأخيرة</a>

                    </li>
                }
            </ul>
        </nav>
    </div>
</div>