@model ELearningApp.Core.Models.Category

@{
    ViewData["Title"] = Model?.Id != 0 ? "Edit Category" : "Add New Category";
    ViewData["ControllerName"] = "Categories";
}

<!-- Contact Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <!-- العنوان -->
                <div class="section-title position-relative text-center mb-4">

                    @if (Model?.Id != 0)
                    {
                        <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">
                            Edit Category
                        </h6>
                    }
                    else
                    {
                        <h6 class="d-inline-block position-relative text-secondary text-uppercase pb-2">
                            Add New Category
                        </h6>
                    }
                    <h1 class="display-6">@ViewData["Title"]</h1>
                </div>

                <!-- الفورم الخاص بالتصنيف -->
                <div class="bg-light rounded p-5">
                    <form id="categoryForm" method="post" asp-controller="@(ViewData["ControllerName"])" asp-action="Save">

                        @if (Model != null && Model.Id != 0)
                        {
                            <div class="form-group">
                                <label for="categoryId">Category ID</label>
                                <input type="number" class="form-control" id="categoryId" asp-for="Id" readonly>
                            </div>
                        }

                        <div class="form-group">
                            <label for="categoryName">Category Name</label>
                            <input type="text" class="form-control" id="categoryName" asp-for="Name" required>
                        </div>

                        <!-- زر الحفظ -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Contact End -->
