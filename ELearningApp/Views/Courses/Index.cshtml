@{
    ViewData["Title"] = "Courses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using ELearningApp.Core.Assists
@using ELearningApp.Core.Models
@model PaginatedList<Course>

@* 
@model ELearningApp.ViewModels.Courses.CoursesViewModel
 *@

<h2>Available Courses</h2>

<div class="row">
    @foreach (var course in Model.Items)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <!-- Display Image -->
                <img class="card-img-top" src="@Url.Content("~/" + course.ImagePath)" alt="Course Image" style="height: 200px; object-fit: cover;">

                <!-- Course Information -->
                <div class="card-body">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text">
                        @course.Description
                    </p>
                    <p class="card-text">
                        <strong>Instructor:</strong> @course.Instructor?.UserName
                    </p>
                    <p class="card-text">
                        <strong>Category:</strong> @course.Category?.Name
                    </p>
                    <p class="card-text">
                        <strong>Duration:</strong> @course.Duration hours
                    </p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <a href="@Url.Action("Details", "Courses", new { id = course.Id })" class="btn btn-sm btn-outline-secondary">View Course</a>
                        </div>
                        <small class="text-muted">@course.Status</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<div>
    <!-- أزرار التنقل بين الصفحات -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <!-- زر الذهاب لأول صفحة -->
            @if (Model.PageNumber > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="1" asp-route-pageSize="@Model.PageSize">الأولى</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">الأولى</span>
                </li>
            }
            <!-- زر السابق -->
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-pageSize="@Model.PageSize">السابق</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">السابق</span>
                </li>
            }

            <!-- عرض أرقام الصفحات -->
            @{
                int startPage = Math.Max(1, Model.PageNumber - 2); // بدء نطاق الأرقام
                int endPage = Math.Min(Model.TotalPages, Model.PageNumber + 2); // نهاية نطاق الأرقام
            }

            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(Model.PageNumber == i ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@i" asp-route-pageSize="@Model.PageSize">@i</a>
                </li>
            }

            <!-- زر التالي -->
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-pageSize="@Model.PageSize">التالي</a>
                </li>
            }
            else
            {
                <li class="page-item disabled">
                    <span class="page-link">التالي</span>
                </li>
            }

            <!-- زر الذهاب لآخر صفحة -->
            @if (Model.PageNumber < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-route-pageNumber="@Model.TotalPages" asp-route-pageSize="@Model.PageSize">الأخيرة</a>

                </li>
            }
        </ul>
    </nav>
</div>