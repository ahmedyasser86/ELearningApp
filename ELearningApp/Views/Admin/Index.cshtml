@{
    ViewData["Title"] = "User Management";
}
@using ELearningApp.Core.Assists
@using ELearningApp.Core.Models
@model PaginatedList<ApplicationUser>


<div class="container mt-4">
    <h2>User Management</h2>



    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Items)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = user.Id })" class="btn btn-sm btn-info">Edit</a>
                        <a href="@Url.Action("MakeAdmin", new { id = user.Id })" class="btn btn-sm btn-warning">Manage Roles</a>
                        <form method="post" asp-action="Delete" asp-route-id="@user.Id" style="display: inline;">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this user?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
